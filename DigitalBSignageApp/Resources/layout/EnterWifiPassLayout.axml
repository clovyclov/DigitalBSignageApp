                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
            <TextView
                android:text="9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
            <TextView
                android:text="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
            <TextView
                android:text="BACK"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        <!--ROW 2-->
            <TextView
                android:text="q"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white" />
            <TextView
                android:text="w"
